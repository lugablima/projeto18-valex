{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"] 
    },
    "lib": [
      "ES2021.String"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true                             
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
